<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naval"
    tools:context=".preco_main">

    <ImageView
        android:id="@+id/logo_preço"
        android:layout_width="276dp"
        android:layout_height="370dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204"
        app:srcCompat="@drawable/tela2_preco" />

    <TextView
        android:id="@+id/textView_preço"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passo 1 de 3"
        android:textColor="@color/vermelho"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_preço"
        app:layout_constraintVertical_bias="0.127" />

    <TextView
        android:id="@+id/textView_passo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço do combustivel"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_preço"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_tela_preco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proxímo"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_margin="16dp"
        app:hintEnabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_preço">

        <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/text_input_preco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o Preço Da Combustivel"
            android:maxLength="4"
            />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>